<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group product-form">
    <%= f.label :email, class:"product-edit-title" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control product-edit-field" %>
  </div>

  <div class="form-group product-form">
    <%= f.label :password, class:"product-edit-title" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control product-edit-field" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group product-form">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class:"product-edit-title" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Log in", class:"btn btn-light product_create" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
