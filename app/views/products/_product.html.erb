<% cache product do %>
 <div class="col-sm-8 col-md-4">
	<%= image_tag(product.image_url, class: "img-responsive") unless product.image_url.blank? %>
	<a href="#"><h3><%= product.name %></h3></a>
	<p><%= product.description %></p>
	<p><%= product.color %></p>
	<p><strong>$<%= product.price %></strong></p>
	<span><%= link_to 'Show', product %></span>
	<span><%= link_to 'Edit', edit_product_path(product) %></span>
	<span><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></span>
 </div> <!-- /col-sm-4 -->
<% end %>
