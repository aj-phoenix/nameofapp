
<% if signed_in? %>
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build], remote:true) do |f| %>
    <div class="form-group">
       <%= f.text_area :body, placeholder: "We value your feedback. Let us know what you think!", class:"form-control message-box"  %>
    </div >
    <p>
      <div class="rating"></div>
    </p>
    <div class="form-group" >
      <%= f.submit "Submit", class: "btn btn-light product_create" %>
    </div>
  <% end %>
<% end %>
